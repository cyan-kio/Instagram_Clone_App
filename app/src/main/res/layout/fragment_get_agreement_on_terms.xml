<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.signup.terms.GetAgreementOnTermsFragment"
    android:padding="15dp"
    android:background="@color/background_sign_in">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_get_agreement_on_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agreement_on_terms"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_get_agreement_on_terms_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agreement_on_terms_guide"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_get_agreement_on_terms"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_get_agreement_on_terms_terms_of_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_of_use"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_get_agreement_on_terms_guide"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_get_agreement_on_terms_select_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_all"
        android:textColor="@color/already_signed_up"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_get_agreement_on_terms_guide"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_get_agreement_on_terms_ckbx"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/tv_get_agreement_on_terms_terms_of_use"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_btn_profile_edit_background"
        android:backgroundTint="@color/white"
        android:padding="13dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_terms_of_use_essential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terms_of_use_essential"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_terms_of_use_essential_learn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learn_more"
            android:textSize="16sp"
            android:textColor="@color/already_signed_up"
            app:layout_constraintTop_toBottomOf="@id/tv_terms_of_use_essential"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_privacy_policy_essential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy_essential"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_privacy_policy_essential_learn_more"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_privacy_policy_essential_learn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learn_more"
            android:textSize="16sp"
            android:textColor="@color/already_signed_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_privacy_policy_essential"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_location_based_features_essential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location_based_features_essential"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@id/tv_location_based_features_essential_learn_more"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_location_based_features_essential_learn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learn_more"
            android:textSize="16sp"
            android:textColor="@color/already_signed_up"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/ckbx_terms_of_use_essential"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/selector_ckbx_icon_select_terms"
            android:button="@null"
            app:layout_constraintTop_toTopOf="@id/tv_terms_of_use_essential"
            app:layout_constraintBottom_toBottomOf="@id/tv_terms_of_use_essential_learn_more"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/ckbx_privacy_policy_essential"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/selector_ckbx_icon_select_terms"
            android:button="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/ckbx_location_based_features_essential"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/selector_ckbx_icon_select_terms"
            android:button="@null"
            app:layout_constraintTop_toTopOf="@id/tv_location_based_features_essential"
            app:layout_constraintBottom_toBottomOf="@id/tv_location_based_features_essential_learn_more"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_get_agreement_on_terms_next"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/agree"
        android:textSize="17sp"
        android:background="@drawable/shape_btn_sign_in_background"
        android:textColor="@color/white"
        android:stateListAnimator="@null"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/const_get_agreement_on_terms_ckbx"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_get_agreement_on_terms_already_signed_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/already_signed_up"
        android:textSize="12sp"
        android:textColor="@color/already_signed_up"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="3dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>