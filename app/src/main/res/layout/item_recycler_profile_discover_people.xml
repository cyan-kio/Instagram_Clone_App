<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_item_recycler_discover_people_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:src="@drawable/img_icon_remove"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_item_discover_people_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="13dp"
        android:background="@drawable/shape_profile_img_round_background"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_discover_people_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userName"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_item_discover_people_image"
        android:layout_marginTop="12dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_discover_people_related_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_sign_up"
        android:textColor="@color/tv_related_user"
        android:textSize="11sp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_discover_people_userName"
        android:layout_marginTop="2dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_item_discover_people_follow"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:text="@string/follow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_discover_people_related_user"
        android:background="@drawable/shape_btn_follow"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="13dp"
        android:stateListAnimator="@null"/>





</androidx.constraintlayout.widget.ConstraintLayout>