<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.discover.contact.DiscoverContactActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_discover_contact_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_discover_friends_with_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discover_friends_with_contact"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="70dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/discover_friends_with_contact_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discover_friends_with_contact_guide"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/tv_guide"
            android:layout_marginTop="40dp"
            android:lineSpacingExtra="1dp"
            app:layout_constraintTop_toBottomOf="@id/tv_discover_friends_with_contact"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_discover_contact_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img_discover_contact_image"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discover_friends_with_contact_guide"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="130dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/discover_friends_with_contact_guide_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discover_friends_with_contact_guide_sync"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/tv_guide"
            android:layout_marginTop="40dp"
            android:lineSpacingExtra="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stroke"
        app:layout_constraintBottom_toBottomOf="@id/const_discover_contact_top"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/const_discover_contact_top"
        android:paddingHorizontal="15dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_discover_contact_friends"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/sync"
            android:textSize="13sp"
            android:textStyle="bold"
            android:background="@drawable/shape_btn_follow"
            android:textColor="@color/white"
            android:stateListAnimator="@null"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_discover_discover_contact_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:textSize="13sp"
            android:textColor="@color/btn_follow"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/btn_discover_contact_friends"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>