<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Instagram_Android_Moon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="textInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/edt_hint_sign_in</item>  // hint 색
        <item name="hintTextColor">@color/edt_hint_stroke</item>   // floating hint 색

        <item name="helperText">@color/colorPrimary</item> // xml 에서 한 속성을 여기서도 할 수 있습니다.
        <item name="helperTextTextColor">@color/colorPrimary</item>

        <item name="errorTextColor">@color/colorPrimary</item>
    </style>

    <style name="StatisticTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIconTint">@null</item>
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabRippleColor">@color/white</item>
        <item name="tabIndicatorHeight">1.3dp</item>
        <item name="tabTextColor">#777777</item>
        <item name="tabSelectedTextColor">#000000</item>
        <item name="tabTextAppearance">@style/StatisticTabTextAppearance</item>
    </style>

    <style name="StatisticTabTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>